events {
  worker_connections 1024;
}

http {
  upstream {{ nginx_upstream_name }} {
    server {{ downstream_nodes[0] }}:80;
    server {{ downstream_nodes[1] }}:80;
    server {{ downstream_nodes[2] }}:80;
    # Optional: Enable health checks
    # server 192.168.1.101:80 max_fails=3 fail_timeout=30s;
  }

  server {
    listen 80;
    server_name {{ downstream_hostname }};

    location / {
      proxy_pass http://{{ nginx_upstream_name }};
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      
      # Optional: WebSocket support
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "Upgrade";
    }
  }
}
